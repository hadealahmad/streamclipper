# Video Clipper Environment Variables
# Copy this file to .env and fill in your API keys

# Google Gemini API Key (required for cloud-based transcription and clip selection)
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Ollama settings (if using local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
